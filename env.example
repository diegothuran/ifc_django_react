# Configurações do Django IFC Monitoring

# Chave secreta do Django (obrigatória em produção)
# Gere uma nova chave com: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Configurações de banco de dados
# Para desenvolvimento (SQLite)
# Deixe vazio para usar SQLite local

# Para produção (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database_name

# Configurações de debug
DEBUG=True

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Configurações de mídia e arquivos estáticos
MEDIA_URL=/media/
STATIC_URL=/static/

# Configurações de email (opcional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
